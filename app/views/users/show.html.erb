<link href="https://fonts.googleapis.com/css2?family=M+PLUS+1p:wght@800&display=swap" rel="stylesheet">

<%= render "shared/show_header" %>

<div class="user-show">
  <div class="show-contents">
    <div class="u-show-nickname">
      <span class="user-nickname"><%= @nickname %></span>
      <span class="nickname-support">さんのマイページ</span>
    </div>

    <table class="table table-bordered user-table">
      <tbody>
        <tr>
          <th scope="row">名前</th>
          <td><%= @real_name %> (<%= @real_kana %>)</td>
        </tr>
        <tr>
          <th scope="row" class="element-title">Email</th>
          <td><%= @email %></td>
        </tr>
        <tr>
          <th scope="row">性別</th>
          <td><%= @gender%></td>
        </tr>
        <tr>
          <th scope="row">年齢</th>
          <td><%= @age %>歳</td>
        </tr>
        <tr>
          <th scope="row">職業</th>
          <td><%= @occupation %></td>
        </tr>
        <tr>
          <th scope="row">資格・経験・特技</th>
          <td><%= @ability %></td>
        </tr>
        <tr>
          <th scope="row">自己紹介</th>
          <td><%= @introduction %></td>
        </tr>
      </tbody>
    </table>

    <div class="user-news">
      <span class="user-nickname"><%= @nickname %></span>
      <span class="nickname-support">さんの依頼一覧</span>
      <ul class="request-lists">
        <% if @requests %>
          <% @requests.each do |request| %>
            <li class='request-list'>
              <%= link_to request_path(request) do %>
                <div class='request-img-content'>
                  <%= image_tag 'index_paper_2.png' ,size: '280x300' ,class: "request-content" %>
                  <%= image_tag request.image ,size: '200x100' ,class: "request-img" %>

                  <% if request.period < @today %>
                    <%= image_tag 'mark_shimekiri.png' ,size: '220x220',class: "time-over-img" %>
                  <% end %>

                  <span class="request-title">
                    <strong><%= request.title %></strong>
                  </span>
                  <span class="request-prefecture">
                    <%= request.prefecture.name %>
                  </span>
                  <span class="request-period">
                    <strong>募集終了: </strong><%= request.period %>
                  </span>
                </div>
              <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
  </div>
</div>

<%= render "shared/footer" %> 